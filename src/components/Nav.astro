<style>
/* Base styling */
nav {
    display: flex;
    align-items: center; 
    justify-content: space-between; 
    padding: 10px 20px; 
    background-color: #C9E4FF;
}

nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 20px; 
}

nav ul li a {
    text-decoration: none;
    color: black; 
    font-weight: 500;
}

/* Burger button styling */
#menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
}

#menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: black;
}

/* Mobile styles */
@media (max-width: 768px) {
    #menu-toggle {
        display: flex;
    }

    nav ul {
        display: none;
        flex-direction: column;
        gap: 10px;
        background-color: #C9E4FF;
        position: absolute;
        top: 60px;
        right: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    nav ul.show {
        display: flex;
    }
}

</style>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    menuToggle.addEventListener("click", () => {
        menu.classList.toggle("show");
    });
</script>

