<style>

    .groen_boks {
    transform: scale(0.8);
    opacity: 0;
    transition:
      transform 0.6s ease,
      opacity 0.6s ease;
  }

  @keyframes fade-in {
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  /**** Mobil *****/
  @media (max-width: 768px) {
    .groen_boks {
      position: relative;
      width: 90%;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
      margin-top: 100px;
    }

    /* Image of the person */
    .image {
      max-width: 100%;
      height: auto;
      z-index: -1;
    }

    /* Yellow blob */
    .tekst_indhold {
      position: relative; /* Juster i forhold til dens normale placering */
      transform: translateY(-50px) translateX(-30px); /* Flytter teksten op og til venstre */
      text-align: left; /* Holder teksten venstrejusteret */
      max-width: 65ch; /* Begrænser bredden for bedre læsbarhed */
      margin-left: 70px; /* Tilføjer afstand fra venstre */
      font-size: 13px; /* Tilpas tekststørrelse */
      z-index: 1; /* Sørger for, at teksten er foran blobben */
    }

    .text-wrapper {
      font-size: 3rem; /* Stor skriftstørrelse for overskriften */
      font-weight: bold; /* Gør teksten fed */
      color: #333; /* Mørkegrå farve */
      width: fit-content; /* Gør bredden kun så stor som indholdet */
      margin: 0 auto; /
    }

    .greenblob {
      position: absolute; 
      bottom: -20px; 
      left: 47.5%; 
      transform: translateX(-50%) scaleX(1.1); 
      max-width: 110%;
      height: auto; 
      z-index: 0; 
    }
  }

  /****** Desktop ******/
  @media (min-width: 769px) {
    .groen_boks {
      position: relative;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      width: 90%;
      max-width: 1200px;
      margin: 50px auto;
      gap: 0.5rem;
      text-align: left;
      margin-top: 200px;
      margin-bottom: 100px;
    }

    /* Image of the person */
    .image {
      flex: 0 0 40%;
      max-width: 100%;
      height: auto;
      margin-right: 0;
    }

    /* Yellow blob */
    .greenblob {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-30%, -55%);
      max-width: 75%;
      height: auto;
      z-index: -1;
    }

    /* Text content */
    .tekst_indhold {
      flex: 0 0 50%;
      max-width: 38ch;
      margin-left: 20px;
      padding-left: 0;
      font-size: 20px;
      margin-top: 70px;
    }

    .text-wrapper {
      font-size: 5rem;
      font-weight: bold;
      color: #333;
      margin: auto;
      width: fit-content;
      margin-top: -10rem;
      transform: translate(-200%);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const target = entry.target as HTMLElement; // Cast til HTMLElement for at få adgang til style
          if (entry.isIntersecting) {
            // Zoom ind, når elementet er synligt
            target.style.transform = "scale(1)";
            target.style.opacity = "1";
          } else {
            // Zoom ud, når elementet forlader viewporten
            target.style.transform = "scale(0.8)";
            target.style.opacity = "0";
          }
        });
      },
      { threshold: 0.1 } // Elementet skal være mindst 10% synligt
    );

    // Find alle elementer med klassen 'groen_boks'
    const elements = document.querySelectorAll(".groen_boks");
    elements.forEach((el) => observer.observe(el));
  });
</script>
