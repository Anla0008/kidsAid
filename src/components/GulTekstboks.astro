<style>
  .gul_boks {
    transform: scale(0.8);
    opacity: 0;
    transition:
      transform 0.6s ease,
      opacity 0.6s ease;
  }

  @keyframes fade-in {
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  /**** Mobil *****/
  @media (max-width: 768px) {
    .gul_boks {
      position: relative;
      width: 90%;
      margin: 0 auto;
      text-align: center;
      margin-top: 100px;
    }

    /* Image of the person */
    .image {
      max-width: 100%;
      height: auto;
      z-index: -1;
    }

    /* Yellow blob */
    .yellowblob {
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%) scaleY(1.1); /* Strækker blobben lodret */
      max-width: 110%;
      height: auto;
      margin-top: 200px;
    }

    .tekst_indhold {
      position: relative;
      text-align: left;
      max-width: 32.5ch;
      margin-left: 45px;
      font-size: 13px;
    }

    .text-wrapper {
      font-size: 3rem;
      font-weight: bold;
      color: #333;
      margin-top: 1rem;
      width: fit-content;
      margin: 0 auto;
    }
  }

  @media (min-width: 769px) {
    .gul_boks {
      position: relative;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      width: 90%;
      max-width: 1200px;
      margin: 50px auto;
      gap: 0.5rem;
      text-align: left;
      margin-top: 200px;
    }

    /* Image of the person */
    .image {
      flex: 0 0 40%;
      max-width: 100%;
      height: auto;
      margin-right: 0;
    }

    /* Yellow blob */
    .yellowblob {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-30%, -50%);
      max-width: 70%;
      height: auto;
      z-index: -1;
    }

    /* Text content */
    .tekst_indhold {
      flex: 0 0 50%;
      max-width: 60ch;
      margin-left: 20px;
      padding-left: 0;
      font-size: 20px;
      margin-top: 50px;
    }

    .text-wrapper {
      font-size: 5rem;
      font-weight: bold;
      color: #333;
      margin: 1.2rem auto;
      width: fit-content;
      text-align: center;
      transform: translate(-50%, 70%);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const target = entry.target as HTMLElement; // Cast til HTMLElement for at få adgang til style
          if (entry.isIntersecting) {
            // Zoom ind, når elementet er synligt
            target.style.transform = "scale(1)";
            target.style.opacity = "1";
          } else {
            // Zoom ud, når elementet forlader viewporten
            target.style.transform = "scale(0.8)";
            target.style.opacity = "0";
          }
        });
      },
      { threshold: 0.1 } // Elementet skal være mindst 10% synligt
    );

    // Find alle elementer med klassen 'gul_boks'
    const elements = document.querySelectorAll(".gul_boks");
    elements.forEach((el) => observer.observe(el));
  });
</script>
